{% import 'AmsEmployeBundle:DhtmlxGrid:macros.html.twig' as m %}
<rows>
    <head>      
        <column id="actif"              type="ro"           hidden="true">Actif</column> 
        <column id="matricule"          type="ro"           width="100"     align="center"  sort="str">Matricule</column> 
        <column id="employe_id"         type="coro"         width="*"       align="left"    sort="sortCombo">Employé{{comboEmploye|raw}}</column> 
        <column id="date_debut"         type="dhxCalendar"  width="70"      align="center"  sort="date">Début</column> 
        <column id="cdddatefinprevu"    type="dhxCalendar"  width="70"      align="center"  sort="date">Fin prévue</column> 
        <column id="date_fin"           type="dhxCalendar"  width="70"      align="center"  sort="date">Fin</column> 
        <column id="depot_id"           type="coro"         width="*"       align="left"    sort="sortCombo">Centre de distribution{{comboDepot|raw}}</column>
        <column id="flux_id"            type="coro"         width="100"     align="left"    sort="sortCombo">Flux{{comboFlux|raw}}</column>
        <column id="rc"                 type="ro"           width="50"      align="center"  sort="str">Rc</column>
        <column id="relatmotifdeb"      type="coro"         width="100"     align="left"    sort="sortCombo">Motif Début{{comboMotifDebut|raw}}</column>
        <column id="motifremplw"        type="coro"         width="100"     align="left"    sort="sortCombo">Motif Remplacement{{comboMotifRempl|raw}}</column>
        <column id="xautremotrempl"     type="ro"           width="*"       align="left"    sort="str">Autre Motif</column>
        <column id="termecddw"          type="coro"         width="100"     align="left"    sort="sortCombo">Terme CDD{{comboTermeCdd|raw}}</column>
        <column id="salremplaw"         type="ro"           width="*"       align="left"    sort="sortCombo">Salarié remplacé</column>
        <column id="infosalrempw"       type="ro"           width="*"       align="right"   sort="str">Info Salarié</column>
    </head> 
    {% for row in curseur %}
        <row {{m.locked(false)}}  {{m.bgColorBloque(row.actif)}}>  
            <cell>{{row.actif}}</cell>
            <cell>{{row.matricule}}</cell> 
            <cell>{{row.employe_id}}</cell>
            <cell>{{row.date_debut|date('d/m/Y')}}</cell>
            <cell>{{row.cdddatefinprevu|date('d/m/Y')}}</cell>
            <cell>{{row.date_fin|date('d/m/Y')}}</cell>
            <cell>{{row.depot_id}}</cell>
            <cell>{{row.flux_id}}</cell>
            <cell>{{row.rc}}</cell>
            <cell>{{row.relatmotifdeb}}</cell>
            <cell>{{row.motifremplw}}</cell>
            <cell>{{row.xautremotrempl}}</cell>
            <cell>{{row.termecddw}}</cell>
            <cell>{{row.salremplaw}}</cell>
            <cell>{{row.infosalrempw}}</cell>
        </row> 
     {% endfor %}
 </rows>