{% import 'AmsEmployeBundle:DhtmlxGrid:macros.html.twig' as m %}
<rows>
    <head>      
        <column id="hchs"               type="ro"   hidden="true"></column> 
        <column id="matricule"          type="ro"   width="100" align="center"    sort="str">Matricule</column> 
        <column id="employe_id"         type="coro" width="*"   align="left"    sort="sortCombo">Employé{{comboEmploye|raw}}</column> 
        <column id="emploi_id"          type="coro" width="*"   align="left"    sort="sortCombo">Emploi{{comboEmploi|raw}}</column>
        <column id="date_debut_contrat" type="ro"   width="70"  align="center"  sort="sortDate">Contrat</column> 
        <column id="date_fin_contrat"   type="ro"   width="70"  align="center"  sort="sortDate">#cspan</column> 
        <column id="date_debut"         type="ro"   width="70"  align="center"  sort="sortDate">Période</column> 
        <column id="date_fin"           type="ro"   width="70"  align="center"  sort="sortDate">#cspan</column> 
        <column id="nbheures_mensuelles" type="ron" width="70"  align="right"   sort="int" format="0.00">Heures mensuelles</column>
        <column id="nbjours_cycle"      type="ron"  width="70"  align="right"   sort="int" format="0.00">Jours cycles</column>
        <column id="nbjours_absence"    type="ron"  width="70"  align="right"   sort="int" format="0.00">Jours absences</column>
        <column id="nbheures_a_realiser" type="ron" width="70"  align="right"   sort="int" format="0.00">Heures</column> 
        <column id="nbheures_realisees" type="ron"  width="70"  align="right"   sort="int" format="0.00">#cspan</column> 
        <column id="nbheures_hn"        type="ron"  width="70"  align="right"   sort="int" format="0.00">Heures normales</column> 
        <column id="nbheures_hc1"       type="ron"  width="70"  align="right"   sort="int" format="0.00">HC</column> 
        <column id="nbheures_hc2"       type="ron"  width="70"  align="right"   sort="int" format="0.00">#cspan</column> 
        <column id="nbheures_hs1"       type="ron"  width="70"  align="right"   sort="int" format="0.00">HS</column> 
        <column id="nbheures_hs2"       type="ron"  width="70"  align="right"   sort="int" format="0.00">#cspan</column> 
    </head>

    {% for row in curseur %}
        <row{{m.locked(false)}}{{m.bgColorBloque(row.isModif)}}>  
            <cell>{{row.hchs}}</cell> 
            <cell>{{row.matricule}}</cell> 
            <cell>{{row.employe_id}}</cell>
            <cell>{{row.emploi_id}}</cell>
            <cell>{% if row.date_debut_contrat is not null%}{{row.date_debut_contrat|date('d/m/Y')}}{% endif %}</cell>
            <cell>{% if row.date_fin_contrat is not null%}{{row.date_fin_contrat|date('d/m/Y')}}{% endif %}</cell>
            <cell>{% if row.date_debut is not null%}{{row.date_debut|date('d/m/Y')}}{% endif %}</cell>
            <cell>{% if row.date_fin is not null%}{{row.date_fin|date('d/m/Y')}}{% endif %}</cell>
            <cell>{{row.nbheures_mensuelles}}</cell>
            <cell>{{row.nbjours_cycle}}</cell>
            <cell>{{row.nbjours_absence}}</cell>
            <cell>{{row.nbheures_a_realiser}}</cell>
            <cell>{{row.nbheures_realisees}}</cell>
            <cell>{{row.nbheures_hn}}</cell>
            <cell>{{row.nbheures_hc1}}</cell>
            <cell>{{row.nbheures_hc2}}</cell>
            <cell>{{row.nbheures_hs1}}</cell>
            <cell>{{row.nbheures_hs2}}</cell>
        </row> 
    {% endfor %}
</rows>
    
