{% import 'AmsModeleBundle:DhtmlxGrid:macros.html.twig' as m %}
<rows>
    <head>      
        <column id="old_date_debut"         type="ro"   hidden="true"></column>
        <column id="depot_id"               type="ro"   hidden="true"></column>
        <column id="flux_id"                type="ro"   hidden="true"></column>
        <column id="annexe"                 type="ro"   width="30"  align="center"  sort="str">Annexe</column> 
        <column id="remplacement"           type="ro"   width="30"  align="center"  sort="str">Détail</column> 
        <column id="contrattype_id"         type="coro" width="120"  align="left"    sort="sortCombo">Remplaçant{{comboEmploye|raw}}</column>
        <column id="remplace_id"            type="ro"   width="120"  align="left"    sort="str">Remplacé</column>
        <column id="actif"                  type="ch"   width="50"  align="center"  sort="str">Actif</column> 
        <column id="journal_id"             type="ro"   hidden="true"></column>
        <column id="lien_journal"           type="ro"   width="30"  align="center"  sort="str"></column> 
        <column id="date_debut"             type="dhxCalendar" width="70"  align="center"  sort="sortDate">Début</column> 
        <column id="cdddatefinprevu"        type="ro"   width="70"  align="center"  sort="sortDate">Fin prévue</column> 
        <column id="date_fin"               type="ro"   width="70"  align="center"  sort="sortDate">Fin</column> 
        <column id="valrem_moyen_semaine"   type="ron"  width="70"  align="center"  sort="int" format="0.00000">Valeur de rémunération Semaine</column>
        <column id="valrem_moyen_dimanche"  type="ron"  width="70"  align="center"  sort="int" format="0.00000">Valeur de rémunération Dimanche</column>
        <column id="cycle"                  type="ro"   width="70"  align="center"  sort="str">Cycle</column>
        <column id="tournee_lundi_id"       type="coro" width="200"   align="left"  sort="sortCombo">Lundi *{{comboTourneeLundi|raw}}</column>
        <column id="tournee_mardi_id"       type="coro" width="200"   align="left"  sort="sortCombo">Mardi *{{comboTourneeMardi|raw}}</column>
        <column id="tournee_mercredi_id"    type="coro" width="200"   align="left"  sort="sortCombo">Merdredi *{{comboTourneeMercredi|raw}}</column>
        <column id="tournee_jeudi_id"       type="coro" width="200"   align="left"  sort="sortCombo">Jeudi *{{comboTourneeJeudi|raw}}</column>
        <column id="tournee_vendredi_id"    type="coro" width="200"   align="left"  sort="sortCombo">Vendredi *{{comboTourneeVendredi|raw}}</column>
        <column id="tournee_samedi_id"      type="coro" width="200"   align="left"  sort="sortCombo">Samedi *{{comboTourneeSamedi|raw}}</column>
        <column id="tournee_dimanche_id"    type="coro" width="200"   align="left"  sort="sortCombo">Dimanche *{{comboTourneeDimanche|raw}}</column>
        {{m.columnAjout(isModif)}}
        <afterInit> 
            <call command="splitAt"><param>6</param></call>   
        </afterInit> 
    </head> 
    {% include 'AmsModeleBundle:Remplacement:row.xml.twig' %}
 </rows>

