{% extends '::base.html.twig' %}

{% block title %}Types produits{% endblock %}

{% block body %}
<div class="" style="text-align:left;">
{% for type in typeProduit %}
    {% if loop.first%}
    <a href="#" data-toggle="modal" data-target="#amsModal" data-description="Creation des informations" data-content="Ce lien permet de créer les informations liés au type du produit."  onmouseover="affPopoverLien(this);" onClick="ChargeModal('{{ path('type_produit_creation') }}',{{type.id}});"><span class="glyphicon glyphicon-plus"></span> Ajouter un type de produit</a><br>
    {% endif%}
{% endfor %}
    <table class="table table-striped table-bordered table-condensed table-center ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libellé</th>
                <th>Hors Presse</th>
                <th>Traitement</th>
            </tr>
        </thead>
        {% for type in typeProduit %}
        <tbody id="details_type_{{ type.id}}">
            <tr>
                <td>{{ type.id }} </td>
                <td>{{ type.libelle }}</td>
                <td>{{ type.hors_presse }}</td>
                <td>
                    <a href="#" data-toggle="modal" data-target="#amsModal" data-description="Modification des informations" data-content="Ce lien permet de modifier les informations liés au type du produit."  onmouseover="affPopoverLien(this);" onClick="ChargeModal('{{ path('type_produit_modification_ajax') }}',{{type.id}});"><span class="glyphicon glyphicon-edit"></span> Modifier</a>
{#                    <a href="#" data-toggle="modal" data-target="#amsModal" data-description="Supression des informations" data-content="Ce lien permet de supprimer les informations liés au type du produit. Attention car la suppression est définitive !!!!"  onmouseover="affPopoverLien(this);" onClick="ChargeModal('{{path('type_produit_suppression', {'typeId':type.id})}}',{{type.id}});"><span class="glyphicon glyphicon-remove"></span> Supprimer</a>#}
{#                    <span class="text-muted deleteData" style="display: block;" onclick="suppConfirmType('{{path('type_produit_suppression', {'typeId':type.id})}}', '{{type.id}}', '{{type.libelle}}');" onmouseover="affPopoverLien(this);" data-description="Suppression d'un type de produit " data-content="Ce lien permet de supprimer un type de produit . Attention car la suppression est définitive !!!!"><span class="glyphicon glyphicon-remove"></span> Supprimer</span>#}
                </td>
            </tr>
        </tbody>
        {% endfor %}
    </table>
</div>
{% endblock %}