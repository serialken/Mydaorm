{% import 'AmsPaieBundle:DhtmlxGrid:macros.html.twig' as m %}
<rows>
    <head>      
        <column id="activite_id"    type="ro"   width="*"   align="left"    sort="str">Activité</column> 
        <column id="typejour_id"    type="ro"   width="100" align="left"    sort="str">Type de Jour</column> 
        <column id="poste_hj"       type="ed"   width="80"  align="center"  sort="str">Poste Paie Durée</column> 
        <column id="poste_hn"       type="ed"   width="80"  align="center"  sort="str">Poste Paie Durée Nuit</column> 
        <column id="date_modif"     type="dhxCalendar"  width="80"      align="left"    sort="date"     format='%d/%m/%Y'>Date Modification</column> 
    </head> 
    {% for row in curseur %}
        <row id ="{{row.id}}"{{m.locked(isModif)}}>  
            <cell>{{row.activite_id}}</cell>
            <cell>{{row.typejour_id}}</cell>
            <cell>{{row.poste_hj}}</cell>
            <cell>{{row.poste_hn}}</cell>
            <cell>{{row.date_modif|date('d/m/Y')}}</cell>
        </row> 
     {% endfor %}
 </rows>




