{% import 'AmsEmployeBundle:DhtmlxGrid:macros.html.twig' as m %}
<rows>
    <head>      
        <column id="actif"              type="ro"           hidden="true">Actif</column> 
        <column id="matricule"          type="ro"           width="100" align="center"  sort="str">Matricule</column> 
        <column id="employe_id"         type="coro"         width="*"   align="left"    sort="sortCombo">Employé{{comboEmploye|raw}}</column> 
        <column id="date_debut"         type="dhxCalendar"  width="70"  align="center"  sort="date">Début</column> 
        <column id="date_fin"           type="dhxCalendar"  width="70"  align="center"  sort="date">Fin</column> 
        <column id="rc"                 type="ro"           width="50"  align="center"  sort="str">Rc</column>
        <column id="heure_debut_dimanche"   type="ro"       width="50"  align="center"  sort="str">Dimanche</column>
        <column id="nbheures_dimanche"      type="ro"       width="50"  align="center"  sort="int">#cspan</column> 
        <column id="heure_debut_lundi"      type="ro"       width="50"  align="center"  sort="str">Lundi</column>
        <column id="nbheures_lundi"         type="ro"       width="50"  align="center"  sort="int">#cspan</column> 
        <column id="heure_debut_mardi"      type="ro"       width="50"  align="center"  sort="str">Mardi</column>
        <column id="nbheures_mardi"         type="ro"       width="50"  align="center"  sort="int">#cspan</column> 
        <column id="heure_debut_mercredi"   type="ro"       width="50"  align="center"  sort="str">Mercredi</column>
        <column id="nbheures_mercredi"      type="ro"       width="50"  align="center"  sort="int">#cspan</column> 
        <column id="heure_debut_jeudi"      type="ro"       width="50"  align="center"  sort="str">Jeudi</column>
        <column id="nbheures_jeudi"         type="ro"       width="50"  align="center"  sort="int">#cspan</column> 
        <column id="heure_debut_vendredi"   type="ro"       width="50"  align="center"  sort="str">Vendredi</column>
        <column id="nbheures_vendredi"      type="ro"       width="50"  align="center"  sort="int">#cspan</column> 
        <column id="heure_debut_samedi"     type="ro"       width="50"  align="center"  sort="str">Samedi</column>
        <column id="nbheures_samedi"        type="ro"       width="50"  align="center"  sort="int">#cspan</column> 
        <column id="nbheures_mensuel"       type="ro"       width="70"  align="center"  sort="int">Horaire mensuel</column> 
        <column id="polyvalent"             type="ch"       width="50"  align="center"  sort="str">Polyvalent</column> 
        <column id="xta_rcactivte"      type="coro"         width="*"   align="left"    sort="sortCombo">Contrat{{comboContrat|raw}}</column> 
        <column id="xta_rcmetier"       type="coro"         width="*"   align="left"    sort="sortCombo">Metier{{comboMetier|raw}}</column> 
        <column id="xta_rcactivhpre"    type="coro"         width="*"   align="left"    sort="sortCombo">Activité{{comboActivite|raw}}</column> 
        <column id="commentaire"        type="txttxt"       width="*"   align="left"    sort="str">Descriptif</column>
    </head> 
    {% for row in curseur %}
        <row id ="{{row.id}}"{{m.locked(isModif and row.isModif)}} {{m.bgColorBloque(row.actif)}}>  
            <cell>{{row.actif}}</cell>
            <cell>{{row.matricule}}</cell> 
            <cell>{{row.employe_id}}</cell>
            <cell>{{row.date_debut|date('d/m/Y')}}</cell>
            <cell>{{row.date_fin|date('d/m/Y')}}</cell>
            <cell>{{row.rc}}</cell>
            <cell>{% if row.dimanche==1 %}{{row.heure_debut_dimanche}}{% endif %}</cell>
            <cell>{% if row.dimanche==1 %}{{row.nbheures_dimanche}}{% endif %}</cell>
            <cell>{% if row.lundi==1 %}{{row.heure_debut_lundi}}{% endif %}</cell>
            <cell>{% if row.lundi==1 %}{{row.nbheures_lundi}}{% endif %}</cell>
            <cell>{% if row.mardi==1 %}{{row.heure_debut_mardi}}{% endif %}</cell>
            <cell>{% if row.mardi==1 %}{{row.nbheures_mardi}}{% endif %}</cell>
            <cell>{% if row.mercredi==1 %}{{row.heure_debut_mercredi}}{% endif %}</cell>
            <cell>{% if row.mercredi==1 %}{{row.nbheures_mercredi}}{% endif %}</cell>
            <cell>{% if row.jeudi==1 %}{{row.heure_debut_jeudi}}{% endif %}</cell>
            <cell>{% if row.jeudi==1 %}{{row.nbheures_jeudi}}{% endif %}</cell>
            <cell>{% if row.vendredi==1 %}{{row.heure_debut_vendredi}}{% endif %}</cell>
            <cell>{% if row.vendredi==1 %}{{row.nbheures_vendredi}}{% endif %}</cell>
            <cell>{% if row.samedi==1 %}{{row.heure_debut_samedi}}{% endif %}</cell>
            <cell>{% if row.samedi==1 %}{{row.nbheures_samedi}}{% endif %}</cell>
            <cell>{% if row.nbheures_mensuel!=0%}{{row.nbheures_mensuel}}{% endif %}</cell>
            <cell>{{row.travhorspresse}}</cell>
            <cell>{{row.xta_rcactivte}}</cell>
            <cell>{{row.xta_rcmetier}}</cell>
            <cell>{{row.xta_rcactivhpre}}</cell>
            <cell>{{row.commentaire}}</cell>
        </row> 
     {% endfor %}
 </rows>
