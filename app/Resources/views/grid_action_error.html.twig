<data>
    <action type='{{action}}' sid='{{rowId}}' tid='{{newId}}'>
        <msg>
            <div onclick="return expandError();" title="Message complet" style="cursor:pointer;align:center">
                <span id="msgError" style="align: center">
                    <img id="plus" alt="+" src="{{asset('images/error_more.gif')}}" style="display:inline;" />
                    <img id="moins" alt="-" src="{{asset('images/error_less.gif')}}" style="display:none;" />
                    {{msg|raw}}
                </span><br/><br/>
                <div id="msgCompleteError" style="display:none">
                    {{msg_complet|raw}}
                </div>
            </div>
        </msg>
    </action>
</data>
